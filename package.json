{
  "name": "crypto-payment-tracker",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:web": "npm --workspace @tracker/web run dev",
    "dev:worker": "npm --workspace @tracker/worker run dev",
    "start:web": "npm --workspace @tracker/web run start",
    "start:worker": "npm --workspace @tracker/worker run start",
    "db:generate": "npm --workspace @tracker/db run generate",
    "db:migrate": "npm --workspace @tracker/db run migrate",
    "db:migrate:deploy": "npm --workspace @tracker/db run migrate:deploy",
    "smoke": "node scripts/smoke-check.mjs"
  }
}
